Program VLY1;

const
  created = 'Sova Rel | VELKA' ;

var
  Баланс, Рандом_заработок, Рандом, Рандом_минус : integer;
  Проверка, вечность : string;
  
begin
  Баланс:= 0 ;
  Рандом:= 4254740;
  Рандом_минус:= -2450000;
  writeln ('Привет! Ваш текущий баланс: ',Баланс, ' Играйте что бы он рос!');
  repeat
  write ('Напишите: Фармить | Что бы добывать монетки!');
  repeat
  readln (Проверка);
  write ('Проверяю правильность написания команды... ');
  if Проверка = ('Фармить') then
  begin
  write ('Вы написали правильно! Сейчас узнаем сколько вам удалось заработать!');
  Рандом_заработок:= ( Рандом_заработок + random (Рандом, Рандом_минус) );
  Баланс:= (Рандом_заработок + Баланс);
  writeln ('Вы получили: ',Рандом_заработок, 'Ваш баланс: ',Баланс, ' Продолжайте Фармить');
  end
  else if Проверка = ('Баланс') then
  begin
  writeln ('Ваш текущий баланс: ',Баланс,'');
  end
  else if Проверка = ('Кто твой создатель?') then
  begin
  writeln ('Мой создатель: ',created, ' Эти данные даже закрепляються изначально в программе и выводяться переменной, так что это правда!');
  end
  else if Проверка = ('Команды') then
  begin
  write ('Мои команды: ');
  writeln ('1) Фармить 2) Кто твой создатель? 3) Баланс 4) Команды');
  end
  else
  begin
  writeln ('НЕ СУЩЕСТВУЮЩАЯ КОМАНДА! Вы не написали не одной команды на которую я бы смог отреагировать! Напишите: Команды | Там вы сможете посмотреть все мои команды.');
  end;
   
  until Проверка = ('Фармить');
  until вечность = ('Продолжение игры');
end.
